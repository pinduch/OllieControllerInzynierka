<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#ef444f"
                android:endColor="#992f31"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#992f33" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <!--<solid-->
                <!--android:color="#445eef" />-->
            <gradient
                android:startColor="#445eef"
                android:endColor="#2f3499"
                android:angle="180" />
            <stroke
                android:width="1dp"
                android:color="#2f3f99" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#4452ef"
                android:endColor="#2f3499"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f3499" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
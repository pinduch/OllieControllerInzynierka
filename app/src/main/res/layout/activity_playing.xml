<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <CheckBox
            android:text="Calibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chbCalibrate"
            android:textSize="24sp"
            android:fontFamily="casual"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:layout_margin="20dp"
            android:textStyle="normal|bold"
            android:gravity="top"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/layout_joystick"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:background="@drawable/joystick_background_image"
            android:gravity="center_vertical"
            android:visibility="gone">

        </RelativeLayout>

        <com.erz.joysticklibrary.JoyStick
            android:id="@+id/joy1"
            app:padColor="#615fff"
            app:buttonColor="#d6000000"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:text="Connecting with Ollie..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelConnecting"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Back"
            android:id="@+id/button3"
            style="@style/button_text"
            android:background="@drawable/my_button"
            android:onClick="backToMainMenu"
            android:layout_width="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" />

        <Button
            android:text="Ride Backward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:id="@+id/btnMoveBack"
            style="@style/button_text"
            android:background="@drawable/my_button"
            android:textSize="18sp" />
    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progressBarConnecting"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>